<div class="container mt-5">
    <div class="row d-flex align-item-center">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    Sign up form
                </div>
                <div class="card-body">
                    <form method="post" action="/">
                        <div class="mb-3">
                          <label for="exampleInputEmail1" class="form-label">Email address</label>
                          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" value="<%= data.email ? data.email : '' %>">
                          <% if(error.emailErr) { %>
                          <div id="emailHelp" class="form-text text-danger"><%= error.emailErr %> </div>
                          <% } %>
                        </div>
                        <div class="mb-3">
                          <label for="exampleInputPassword1" class="form-label">Password</label>
                          <input type="password" class="form-control" id="exampleInputPassword1" name="password" value="<%= data.password ? data.password : '' %>">
                          <% if(error.passwordErr){ %>
                          <div id="emailHelp" class="form-text text-danger"><%= error.passwordErr %> </div>
                          <% } %>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>